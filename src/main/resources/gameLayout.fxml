<?import com.comp2042.tetris.view.GameOverPanel?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<StackPane fx:controller="com.comp2042.tetris.controller.GuiController"
           xmlns:fx="http://javafx.com/fxml">

    <!--game area -->
    <Pane>
        <GridPane fx:id="ghostPanel" vgap="1" hgap="1" mouseTransparent="true"/>
        <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>

        <BorderPane styleClass="gameBoard" fx:id="gameBoard">
            <center>
                <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
            </center>
        </BorderPane>

        <!--notifications like score popups -->
        <Group fx:id="groupNotification" layoutX="14" layoutY="203"/>
    </Pane>

    <!-- top right elements-->
    <HBox StackPane.alignment="TOP_RIGHT" alignment="CENTER_RIGHT" pickOnBounds="false">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <VBox spacing="10">
            <Button fx:id="pauseButton" text="Pause" onAction="#pauseGame"/>
            <Label fx:id="scoreLabel"
                   text="Score: 0"
                   style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;
                          -fx-background-color: rgba(0,0,0,0.35); -fx-padding: 4 8;" />
            <Label fx:id="levelLabel"
                   text="Level: 1"
                   style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;
                          -fx-background-color: rgba(0,0,0,0.35); -fx-padding: 4 8;" />

            <!-- preview of next + hold block -->
            <VBox alignment="CENTER" spacing="4">
                <Label text="Next Block:"
                       style="-fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                <GridPane fx:id="nextPanel"
                          prefWidth="50" prefHeight="80" hgap="1" vgap="1" mouseTransparent="true"
                          style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 6;
                                 -fx-background-color: rgba(0,0,0,0.12); -fx-background-radius: 6;" />
                <Label text="Hold:"
                       style="-fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                <GridPane fx:id="holdPanel"
                          prefWidth="50" prefHeight="80" hgap="1" vgap="1" mouseTransparent="true"
                          style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 6;
                                 -fx-background-color: rgba(0,0,0,0.12); -fx-background-radius: 6;" />
            </VBox>
        </VBox>
    </HBox>

    <!-- overlay(always on top) -->
    <StackPane fx:id="gameOverOverlay" visible="false" managed="false" pickOnBounds="true">
        <!-- dim background -->
        <Region style="-fx-background-color: rgba(0,0,0,0.55);"
                StackPane.alignment="CENTER"
                prefWidth="Infinity" prefHeight="Infinity" />
        <!-- centered modal -->
        <VBox alignment="CENTER" spacing="12" maxWidth="280"
              style="-fx-background-color: rgba(30,30,34,0.95);
                     -fx-background-radius: 16;
                     -fx-padding: 22;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35),20,0.2,0,8);"
              StackPane.alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
            <Button fx:id="replayButton" text="Replay" onAction="#newGame"
                    style="-fx-background-color:#00d1ff; -fx-text-fill:#111;
                           -fx-background-radius:10; -fx-font-weight:700; -fx-padding:8 16;" />
        </VBox>
    </StackPane>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>
